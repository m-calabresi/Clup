<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.InvalidateActivity">

    <TextView
        android:id="@+id/warning_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawablePadding="12dp"
        android:padding="12dp"
        android:text="@string/text_warning_register"
        android:textAlignment="center"
        android:textSize="14sp"
        app:drawableTopCompat="@drawable/ic_warning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/register_button"
        style="@style/AppTheme.Clup.FilledRoundButton"
        android:layout_width="@dimen/rounded_button_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/action_invalidate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/warning_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>