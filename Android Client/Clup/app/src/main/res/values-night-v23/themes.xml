<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MAIN ACTIVITY THEME -->
    <style name="AppTheme.Clup.Main" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">?android:colorBackground</item>

        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- MAP ACTIVITY THEME -->
    <style name="AppTheme.Clup.Map" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- SELECT ACTIVITY THEME -->
    <style name="AppTheme.Clup.Select" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">?android:colorBackground</item>

        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- DETAILS ACTIVITY THEME -->
    <style name="AppTheme.Clup.Details" parent="AppTheme.Clup.Select">
        <item name="android:navigationBarColor">@color/white_alpha_07</item>
    </style>

    <!-- SPLASH SCREEN THEME -->
    <style name="AppTheme.Clup.Splash" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">?android:colorBackground</item>

        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="android:windowBackground">@drawable/splash_screen_background</item>

        <item name="windowActionModeOverlay">true</item>
    </style>
</resources>