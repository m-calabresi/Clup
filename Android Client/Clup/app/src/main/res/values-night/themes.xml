<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- BASE APPLICATION THEME -->
    <style name="AppTheme.Clup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lime_500</item>
        <item name="colorPrimaryDark">@color/gray_900</item>
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="colorOnPrimary">@color/gray_900</item>

        <item name="colorSecondary">@color/gray_900</item>
        <item name="colorSecondaryVariant">@color/lime_500</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <!-- MAIN ACTIVITY THEME -->
    <style name="AppTheme.Clup.Main" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:statusBarColor">?android:colorBackground</item>

        <item name="android:navigationBarColor">@color/white_alpha_07</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- MAP ACTIVITY THEME -->
    <style name="AppTheme.Clup.Map" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:statusBarColor">@color/transparent</item>

        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- SELECT ACTIVITY THEMES -->
    <style name="AppTheme.Clup.Select" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:statusBarColor">?android:colorBackground</item>

        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.Clup.Select.Background" parent="">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <!-- DETAILS ACTIVITY THEMES -->
    <style name="AppTheme.Clup.Details" parent="AppTheme.Clup.Select">
        <item name="android:navigationBarColor">@color/white_alpha_07</item>
    </style>

    <style name="AppTheme.Clup.Details.ConstraintLayout" parent="">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="AppTheme.Clup.CoordinatorLayout" parent="Widget.Support.CoordinatorLayout">
        <item name="android:background">@color/white_alpha_07</item>
    </style>

    <!-- REGISTER ACTIVITY THEMES -->
    <style name="AppTheme.Clup.Register" parent="AppTheme.Clup.Select">
        <item name="android:statusBarColor">?android:colorBackground</item>
    </style>

    <!-- SPLASH SCREEN THEME -->
    <style name="AppTheme.Clup.Splash" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:statusBarColor">?android:colorBackground</item>

        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="android:windowBackground">@drawable/splash_screen_background</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="AppTheme.Clup.SelectMaterialToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?android:colorBackground</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="AppTheme.Clup.MainMaterialToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?android:colorBackground</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!-- BUTTON FINAL THEMES -->
    <style name="AppTheme.Clup.FilledRoundButton" parent="@style/AppTheme.Clup.MaterialRoundedButton">
        <item name="rippleColor">@color/gray_800</item>
    </style>

    <style name="AppTheme.Clup.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="rippleColor">@color/gray_800</item>
    </style>

    <style name="AppTheme.Clup.InfoWindowRoundButton" parent="@style/AppTheme.Clup.MaterialRoundedButton">
        <item name="android:backgroundTint">@color/lime_500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- PAD TEXT VIEW THEME -->
    <style name="AppTheme.Clup.PadTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/gray_900</item>
    </style>

    <!-- ALERT DIALOG THEME -->
    <style name="AppTheme.Clup.RoundedAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/lime_500</item>
        <item name="colorAccent">@color/lime_500</item>
        <item name="cornerSize">@dimen/alert_dialog_corner_radius</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">
            @dimen/alert_dialog_corner_radius
        </item>
    </style>

    <!-- TITLE TEXT VIEW THEMES -->
    <style name="AppTheme.Clup.TitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="paddingStart">@dimen/title_text_view_horizontal_padding</item>
        <item name="paddingEnd">@dimen/title_text_view_horizontal_padding</item>

        <item name="android:fontFamily">@font/helvetica_neue_heavy</item>

        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_text_view_text_size</item>
    </style>

    <style name="AppTheme.Clup.WelcomeTextView" parent="AppTheme.Clup.TitleTextView">
        <item name="android:textColor">@color/lime_200</item>
    </style>

    <style name="AppTheme.Clup.ItemTitleTextView" parent="">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/item_title_text_view_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Clup.ItemTitleTextView.Alt" parent="AppTheme.Clup.ItemTitleTextView">
        <item name="android:textSize">@dimen/item_title_text_view_alt_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Clup.ItemTitleTextView.TimeLine" parent="">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/item_title_text_view_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Clup.InfoTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:lines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white_alpha_30</item>
        <item name="android:textSize">@dimen/info_title_text_view</item>
    </style>

    <style name="AppTheme.Clup.InfoTitleTextView.Error" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/item_title_text_view_text_size</item>
    </style>

    <!-- SUBTITLE TEXT VIEW THEMES -->
    <style name="AppTheme.Clup.SubtitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>

        <item name="android:textSize">@dimen/subtitle_text_view_text_size</item>
    </style>

    <style name="AppTheme.Clup.ItemSubtitleTextView" parent="AppTheme.Clup.SubtitleTextView">
        <item name="android:textSize">@dimen/item_subtitle_text_view_text_size</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="AppTheme.Clup.ItemSubtitleTextView.Alt" parent="AppTheme.Clup.ItemSubtitleTextView">

    </style>

    <style name="AppTheme.Clup.ItemSubtitleTextView.Error" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/item_subtitle_text_view_text_size</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/error_color</item>
    </style>

    <style name="AppTheme.Clup.DetailsTextView" parent="AppTheme.Clup.SubtitleTextView">
        <item name="android:textColor">@color/white_alpha_80</item>
        <item name="drawableTint">@color/white_alpha_80</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="AppTheme.Clup.InfoSubtitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white_alpha_30</item>
        <item name="android:textSize">@dimen/info_subtitle_text_view</item>
    </style>

    <style name="AppTheme.Clup.InfoSubtitleTextView.Error" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/error_color_alt</item>
        <item name="android:textSize">@dimen/item_subtitle_text_view_text_size</item>
    </style>

    <!-- CARD VIEW ITEM THEMES -->
    <style name="AppTheme.Clup.ItemCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_default_elevation</item>

        <item name="android:layout_margin">@dimen/card_view_margin</item>

        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.Clup.TopRoundedCardView" parent="">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:backgroundTint">@color/gray_810</item>
    </style>

    <style name="AppTheme.Clup.ActionsCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/lime_500_alpha_50</item>

        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_no_elevation</item>
    </style>

    <style name="AppTheme.Clup.ReservationCardView" parent="AppTheme.Clup.ActionsCardView">
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <!-- RECYCLER VIEW CONTAINER THEME -->
    <style name="AppTheme.Clup.BottomSheetRecyclerView" parent="">
        <item name="android:background">?android:colorBackground</item>

        <item name="behavior_hideable">false</item>
        <item name="behavior_peekHeight">@dimen/peek_height</item>
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior
        </item>
    </style>

    <!-- EXTENDED FLOATING ACTION BUTTON THEME -->
    <style name="AppTheme.Clup.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:paddingTop">@dimen/rounded_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/rounded_button_vertical_padding</item>

        <item name="fontFamily">@font/helvetica_neue_heavy</item>

        <item name="rippleColor">@color/gray_800</item>
        <item name="backgroundTint">@color/lime_500</item>
        <item name="iconTint">@color/gray_900</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <!-- FLOATING ACTION BUTTON THEME -->
    <style name="AppTheme.Clup.LocationFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/gray_800</item>
    </style>

    <!-- CHIP THEMES -->
    <style name="AppTheme.Clup.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
    </style>

    <style name="AppTheme.Clup.Chip.Text" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:ellipsize">end</item>

        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TABS LAYOUT THEME -->
    <style name="AppTheme.Clup.TabsLayout" parent="">
        <item name="android:background">?android:colorBackground</item>
        <item name="tabSelectedTextColor">@color/lime_200</item>
        <item name="tabIndicatorColor">@color/lime_200</item>
    </style>
</resources>