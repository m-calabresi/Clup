<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- AUTH ACTIVITY THEMES -->
    <style name="AppTheme.Clup.Auth" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?android:colorBackground</item>

        <item name="android:navigationBarColor">@color/gray_legacy</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- MAIN ACTIVITY THEMES -->
    <style name="AppTheme.Clup.Main" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/lime_500</item>

        <item name="android:navigationBarColor">@color/gray_legacy</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- MAP ACTIVITY THEMES -->
    <style name="AppTheme.Clup.Map" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/transparent</item>

        <item name="android:navigationBarColor">@color/gray_legacy</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- SELECT ACTIVITY THEMES -->
    <style name="AppTheme.Clup.Select" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/lime_500</item>

        <item name="android:navigationBarColor">@color/gray_legacy</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- DETAILS ACTIVITY THEMES -->
    <style name="AppTheme.Clup.Details" parent="AppTheme.Clup.Select">

    </style>

    <!-- REGISTER ACTIVITY THEMES -->
    <style name="AppTheme.Clup.Register" parent="AppTheme.Clup.Select">
        <item name="android:statusBarColor">?android:colorBackground</item>
    </style>

    <!-- INVALIDATE ACTIVITY THEMES -->
    <style name="AppTheme.Clup.Invalidate" parent="AppTheme.Clup.Select">
        <item name="android:statusBarColor">?android:colorBackground</item>
    </style>

    <!-- SPLASH SCREEN THEMES -->
    <style name="AppTheme.Clup.Splash" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?android:colorBackground</item>

        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="android:windowBackground">@drawable/splash_screen_background</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- PAD TEXT VIEW THEMES -->
    <style name="AppTheme.Clup.PadTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/gray_50</item>
    </style>
</resources>