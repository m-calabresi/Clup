<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- BASE APPLICATION THEME -->
    <style name="AppTheme.Clup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lime_500</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="colorOnPrimary">@color/gray_900</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/unknown</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <!-- MAIN ACTIVITY THEME -->
    <style name="AppTheme.Clup.Main" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:statusBarColor">@color/gray_legacy</item>

        <item name="android:navigationBarColor">@color/gray_legacy</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- MAP ACTIVITY THEME -->
    <style name="AppTheme.Clup.Map" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- SPLASH SCREEN THEME -->
    <style name="AppTheme.Clup.Splash" parent="AppTheme.Clup">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="AppTheme.Clup.MaterialToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">

    </style>

    <!-- BUTTON BASE THEME -->
    <style name="AppTheme.Clup.MaterialRoundedButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/rounded_button_corner_radius</item>

        <item name="android:paddingTop">@dimen/rounded_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/rounded_button_vertical_padding</item>

        <item name="android:stateListAnimator">@null</item>

        <item name="fontFamily">@font/helvetica_neue_heavy</item>
    </style>

    <style name="AppTheme.Clup.MaterialOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/rounded_button_corner_radius</item>

        <item name="android:paddingTop">@dimen/rounded_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/rounded_button_vertical_padding</item>

        <item name="strokeWidth">@dimen/rounded_button_stroke_width</item>
        <item name="android:stateListAnimator">@null</item>

        <item name="fontFamily">@font/helvetica_neue_heavy</item>
    </style>

    <!-- BUTTON FINAL THEME -->
    <style name="AppTheme.Clup.FilledRoundButton" parent="@style/AppTheme.Clup.MaterialRoundedButton">
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="AppTheme.Clup.OutlinedRoundButton" parent="AppTheme.Clup.MaterialOutlinedButton">
        <item name="strokeColor">@color/outlined_material_round_button_stroke_color</item>
        <item name="android:textColor">@color/outlined_material_round_button_text_color</item>
    </style>

    <!-- ALERT DIALOG THEME -->
    <style name="AppTheme.Clup.RoundedAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/lime_700</item>
        <item name="colorAccent">@color/lime_700</item>
        <item name="cornerSize">@dimen/alert_dialog_corner_radius</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">
            @dimen/alert_dialog_corner_radius
        </item>
    </style>

    <!-- TITLE TEXT VIEW THEME -->
    <style name="AppTheme.Clup.TitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="paddingStart">@dimen/title_text_view_horizontal_padding</item>
        <item name="paddingEnd">@dimen/title_text_view_horizontal_padding</item>

        <item name="android:fontFamily">@font/helvetica_neue_heavy</item>

        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/title_text_view_text_size</item>
    </style>

    <!-- PAD TEXT VIEW THEME -->
    <style name="AppTheme.Clup.PadTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/gray_legacy</item>
    </style>

    <!-- SUBTITLE TEXT VIEW THEME -->
    <style name="AppTheme.Clup.SubtitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>

        <item name="android:textSize">@dimen/subtitle_text_view_text_size</item>
    </style>
</resources>