<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.Clup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lime_500</item>
        <item name="colorPrimaryVariant">@color/lime_700</item>
        <item name="colorOnPrimary">@color/gray_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime_500</item>
        <item name="colorSecondaryVariant">@color/lime_700</item>
        <item name="colorOnSecondary">@color/gray_800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--> SPLASH SCREEN THEME <-->

    <style name="AppTheme.Clup.SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="MaterialRoundedButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">32dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">60dp</item>
        <item name="android:paddingEnd">60dp</item>
    </style>

    <style name="OutlinedMaterialRoundedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">32dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingStart">60dp</item>
        <item name="android:paddingEnd">60dp</item>

        <item name="strokeColor">@color/outlined_material_round_button_stroke_color</item>
        <item name="strokeWidth">2dp</item>
    </style>

</resources>